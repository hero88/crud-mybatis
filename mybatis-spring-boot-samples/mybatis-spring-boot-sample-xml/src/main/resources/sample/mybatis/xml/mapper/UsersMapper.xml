<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sample.mybatis.xml.mapper.UsersMapper">
    <select id="selectUserById" resultType="Users">
        select * from users where id = #{value}
    </select>

    <select id="selectUserByUserName" resultType="Users">
        select id, username, name, gender, address, age, is_active, email, phone_number from users where username = #{value}
    </select>

</mapper>
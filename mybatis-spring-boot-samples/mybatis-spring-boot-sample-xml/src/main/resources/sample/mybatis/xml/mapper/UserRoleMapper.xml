<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sample.mybatis.xml.mapper.UsersMapper">
    <select id="selectUserByUserId" resultType="UserRole">
        select * from user_role where user_id = #{value}
    </select>

    <update id="updateUserRole" parameterType="UserRole">
        UPDATE user_role SET role_id = #{role_id} WHERE user_id = #{userId}
    </update>

    <insert id="createUserRole" parameterType="UserRole">
        INSERT INTO user_role (user_id, role_id) VALUES (#{userId}, #{roleId})
    </insert>

</mapper>
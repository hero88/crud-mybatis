<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sample.mybatis.xml.mapper.UserRoleMapper">
    <select id="selectUserRoleByUserId" resultType="UserRole">
        select user_id, role_id from user_role where user_id = #{user_id}
    </select>
</mapper>
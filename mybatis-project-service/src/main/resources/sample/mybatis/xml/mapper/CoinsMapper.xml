<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.allxone.mybatisprojectservice.mapper.UsersMapper">
    <select id="findById" resultType="Users">
        select * from users where id = #{value}
    </select>

    <select id="findAllUser" resultType="Users">
        SELECT * FROM users
    </select>

    <!--    <insert id="createUser" parameterType="Users">-->
    <!--        INSERT INTO users (username, password, name, gender, address, age, is_active, email, phone_number) VALUES (#{userName}, #{password}, #{name}, #{gender}, #{address}, #{age}, #{isActive}, #{email}, #{phoneNumber})-->
    <!--    </insert>-->

    <update id="updateUser" parameterType="Users">
        UPDATE users SET username = #{userName}, password = #{password} WHERE id = #{userId}
    </update>

    <update id="activeUser" parameterType="Users">
        UPDATE users SET is_active = #{isActive} WHERE id = #{userId}
    </update>

    <select id="findByEmail" resultType="Users">
        select * from users where email = #{email}
    </select>

    <insert id="insertUser" parameterType="Users">
        insert into users (password, firstName, lastName, gender, address, age, email, phoneNumber, role)
        values (#{password}, #{firstName}, #{lastName}, #{gender}, #{address}, #{age}, #{email}, #{phoneNumber}, #{role})
    </insert>

</mapper>
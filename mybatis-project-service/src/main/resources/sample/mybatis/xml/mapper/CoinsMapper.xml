<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.allxone.mybatisprojectservice.mapper.CoinsMapper">

    <select id="findById" resultType="Coins">
        select * from coins where id = #{value}
    </select>

    <select id="findAllCoinByUserId" resultType="Coins">
        SELECT * FROM coins where userId = #{userId};
    </select>

    <update id="updateCoin" parameterType="Coins">
        UPDATE coins SET quantity = #{quantity} WHERE id = #{id}
    </update>

    <insert id="insertCoin" parameterType="Coins">
        insert into coins (coinId ,name, symbol, marketPairCount, quantity, userId)
        values (#{coinId}, #{name}, #{symbol}, #{marketPairCount}, #{quantity}, #{userId})
    </insert>

    <delete id="deleteCoinById">
        DELETE FROM coins WHERE id = #{id}
    </delete>


</mapper>
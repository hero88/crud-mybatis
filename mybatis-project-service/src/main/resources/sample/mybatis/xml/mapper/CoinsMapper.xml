<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.allxone.mybatisprojectservice.mapper.CoinsMapper">

    <select id="findById" resultType="Coins">
        select * from coins where id = #{value}
    </select>

    <select id="findByUserId" resultType="Coins">
        SELECT * FROM coins where user_id = #{userId}
    </select>

    <update id="updateCoin" parameterType="Coins">
        UPDATE coins SET quantity = #{quantity} WHERE id = #{id}
    </update>

    <insert id="insertCoin" parameterType="Coins">
        insert into coins (name, symbol, coinmarket_id, quantity, user_id)
        values (#{name}, #{symbol}, #{coinMarketId}, #{quantity}, #{userId})
    </insert>

</mapper>
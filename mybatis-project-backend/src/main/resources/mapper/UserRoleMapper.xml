<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.allxone.mybatisprojectbackend.mapper.UserRoleMapper">
    <insert id="addRole">
        INSERT INTO user_role (user_id, role_id)
        VALUES (#{userId}, #{roleId});
    </insert>
    <delete id="deleteUserRoleByUsUserId" parameterType="long">
        DELETE
        FROM user_role
        WHERE USER_ID = #{id}
    </delete>
</mapper>

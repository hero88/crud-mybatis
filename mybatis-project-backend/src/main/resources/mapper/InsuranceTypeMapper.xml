<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.allxone.mybatisprojectbackend.mapper.InsuranceTypeMapper">
    <resultMap id="insuranceTypeResultMap" type="com.allxone.mybatisprojectbackend.model.InsuranceType">
        <id property="id" column="id"/>
        <result property="insuranceName" column="insurance_name"/>
        <result property="insuranceDescription" column="insurance_description"/>
        <result property="insuranceRate" column="insurance_rate"/>
    </resultMap>

    <insert id="saveInsuranceType" parameterType="InsuranceType" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO insurance_type (insurance_name, insurance_description, insurance_rate)
        VALUES (#{insuranceName}, #{insuranceDescription}, #{insuranceRate})
    </insert>

    <select id="getInsuranceTypeById" parameterType="int" resultMap="insuranceTypeResultMap">
        SELECT * FROM insurance_type WHERE id = #{id}
    </select>

    <select id="getAllInsuranceTypes" resultMap="insuranceTypeResultMap">
        SELECT * FROM insurance_type
    </select>

    <select id="getInsuranceTypeByEmployeeId" resultMap="insuranceTypeResultMap" parameterType="Long">
        SELECT it.*
        FROM employee e
        JOIN insurance_type it ON it.id
        IN (SELECT * FROM JSON_TABLE(e.insurance_ids, '$[*]' COLUMNS (insurance_id INT PATH '$')) as tmp)
        where e.id = #{id}
    </select>



    <update id="updateInsuranceType" parameterType="InsuranceType">
        UPDATE insurance_type
        <set>
            <if test="insuranceName != null">
                insurance_name = #{insuranceName},
            </if>
            <if test="insuranceDescription != null">
                insurance_description = #{insuranceDescription},
            </if>
            <if test="insuranceRate != null">
                insurance_rate = #{insuranceRate},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteInsuranceTypeById" parameterType="int">
        DELETE FROM insurance_type WHERE id = #{id}
    </delete>

</mapper>

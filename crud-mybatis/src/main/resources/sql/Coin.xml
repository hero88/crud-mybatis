<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="crudmybatis.mappers.CoinsMapper">
    <insert id="insertCoins" parameterType="Coin">
        INSERT INTO coins (name, symbol, coinmarket_id, quantity, user_id, created_at)
        VALUES (#{name}, #{symbol}, #{coinmarketId}, #{quantity}, #{userId}, #{createdAt})
    </insert>

    <delete id="deleteCoinById">
        DELETE
        FROM coins
        WHERE id = #{id};
    </delete>

    <delete id="deleteCoinByUserId" parameterType="long">
        DELETE
        FROM coins
        WHERE user_id = #{userId};
    </delete>

    <update id="updateCoin" parameterType="Coin">
        UPDATE coins
        SET quantity   = #{quantity},
            updated_at = #{updatedAt}
        WHERE id = #{id}
          And user_id = #{userId};
    </update>

    <select id="getAllCoinsByUserId" parameterType="long" resultMap="coins">
        SELECT *
        FROM coins
        WHERE user_id = #{userId};
    </select>

    <select id="selectCoinById" parameterType="long" resultMap="coins">
        SELECT *
        FROM coins
        WHERE id = #{id};
    </select>

    <select id="selectCoinByUserIdAndCoinmarketId" parameterType="Coin" resultMap="coins">
        SELECT *
        FROM coins
        WHERE user_id = #{userId}
          AND coinmarket_id = #{coinmarketId};
    </select>

    <!-- ResultMap -->
    <resultMap id="coins" type="Coin">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="symbol" column="symbol"/>
        <result property="coinmarketId" column="coinmarket_id"/>
        <result property="quantity" column="quantity"/>
        <result property="userId" column="user_id"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>
</mapper>
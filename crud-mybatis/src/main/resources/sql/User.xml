<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="crudmybatis.mappers.UserMapper">
    <insert id="insertUser" parameterType="User">
        INSERT INTO users (id, username, password, name, address, age, is_active, phone_number, email, created_at)
        VALUES (#{id}, #{username}, #{password}, #{name}, #{address}, #{age}, #{isActive}, #{phoneNumber}, #{email},
                #{createdAt});
    </insert>

    <update id="updateUser" parameterType="User">
        UPDATE users
        SET username       = #{username},
            password       = #{password},
            name           = #{name},
            address        = #{address},
            age            = #{age},
            is_active      = #{isActive},
            phone_number   = #{phoneNumber},
            email          = #{email},
            updated_at     = #{updatedAt},
            remember_token = #{rememberToken}
        WHERE id = #{id};
    </update>

    <delete id="deleteUserById" parameterType="long">
        DELETE
        from users
        WHERE id = #{id};
    </delete>

    <select id="selectAllUsers" resultMap="users">
        SELECT *
        FROM users;
    </select>

    <select id="selectUserById" parameterType="long" resultMap="users">
        SELECT *
        FROM users
        WHERE id = #{id};
    </select>

    <select id="selectUserByUsername" parameterType="string" resultMap="users">
        SELECT *
        FROM users
        WHERE username = #{username};
    </select>

    <select id="selectUserByEmail" parameterType="string" resultMap="users">
        SELECT *
        FROM users
        WHERE email = #{email};
    </select>

    <select id="getRoles" parameterType="string" resultMap="roles">
        SELECT r.id   AS id,
               r.name AS name
        FROM users AS u
                 LEFT JOIN user_role AS ur ON u.id = ur.user_id
                 LEFT JOIN roles AS r ON r.id = ur.role_id
        WHERE u.username = #{username}
    </select>

    <select id="findByEmail" parameterType="string" resultMap="users">
        SELECT *
        FROM users
        WHERE email = #{email};
    </select>

    <select id="findByResetPasswordToken" parameterType="string" resultMap="users">
        SELECT *
        FROM users
        WHERE remember_token = #{remember_token};
    </select>


    <resultMap id="users" type="User">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="username" column="username"/>
        <result property="email" column="email"/>
        <result property="isActive" column="is_active"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="rememberToken" column="remember_token"/>
        <result property="age" column="age"/>
        <result property="gender" column="gender"/>
        <result property="address" column="address"/>
        <result property="phoneNumber" column="phone_number"/>
    </resultMap>

    <resultMap id="roles" type="Role">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
    </resultMap>
</mapper>